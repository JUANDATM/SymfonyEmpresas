{% extends 'base.html.twig' %}

{% block title %}CATALOGO EMPRESAS{% endblock %}

{% block body %}
   <div class="container">
             <div class="row">
          
           {% for empresa in content['empresas'] %}
            <div class="col s3">
                <div class="card small">
                  <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="data:{{empresa.FormatoImagen}};base64,{{ empresa.RutaImagen }}" width="300px" height="200px">
                  </div>
                  <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">{{empresa.NombreEmpresa}}
                    <a id="visita" name="visita" id-visita="{{empresa.IdEmpresa}}"  class="visita">
                    <i class="material-icons right">add</i>
                    </a>
                    </span>
                  </div>
                  <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">{{empresa.NombreEmpresa}}<i class="material-icons right">close</i></span>
                    <p>Nombre : {{empresa.NombreEmpresa}}</p>
                    <p>Direccion :  {{empresa.DireccionEmpresa}}</p>
                    <p>Correo Electronico : {{empresa.CorreoEmpresa}}</p>
                    <p>Descipcion : {{empresa.DescripcionEmpresa}}</p>
                    <p>Telefono : {{empresa.TelefonoEmpresa}}</p>                    
                  </div>
                </div>
            </div>
            {% endfor %}
           </div>
    </div>

{% endblock %}


