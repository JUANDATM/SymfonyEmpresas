{% extends 'base.html.twig' %}

{% block title %}ADMIN VISTAS{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset("css/jquery.dataTables.min.css") }}">
{% endblock %}

{% block body %}
<div class="container">
    <h1>CONTEO VISITAS</h1>
    <table id="vistas-table" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th style="width:5%">Id Visita</th>
                <th style="width:20%">IdUsuario que Visita</th>
                <th style="width:30%">Nombre Empresa Visita</th>
                <th style="width:20%">Correo Usuario Visita</th>
                <th style="width:20%">Fecha de la Visita</th>
            </tr>
        </thead>
        <tbody>
           {% for vista in content['vistas'] %}
            <tr>
                <td>{{ vista.IdVisita }}</td>
                <td>{{ vista.IdUsuario }}</td>
                <td>{{ vista.NombreEmpresa }}</td>
                <td>{{ vista.CorreoUsuario }}</td>
                <td>{{ vista.Fecha }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table> 
</div>

{% endblock %}

{% block javascripts %}

<script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/jquery.dataTables_.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/dataTables.materialize.js') }}"></script>
<script type="text/javascript" src="{{ asset('jsEmpresa/js/Empresas.js') }}"></script>
{% endblock %}