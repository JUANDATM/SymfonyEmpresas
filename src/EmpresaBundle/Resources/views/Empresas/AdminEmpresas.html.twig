{% extends 'base.html.twig' %}

{% block title %}ADMIN EMPRESAS{% endblock %}

{% block body %}
<div class="container">
    <h1>Empresas</h1>
    <button id="empresa-nuevo" class="btn btn-success"><i class="material-icons">add_circle_outline</i></button>
    <br></br>
    <table id="empresas-table" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th style="width:30%">Nombre Empresa</th>
                <th style="width:30%">Direccion Empresa</th>
                <th style="width:20%">Correo Empresa</th>
                <th style="width:20%">Descripcion Empresa</th>
                <th style="width:20%">Imagen Empresa</th>
                <th style="width:20%">Acciones</th>
            </tr>
        </thead>
        <tbody>
           {% for empresa in content['empresas'] %}
            <tr>
                <td>{{ empresa.IdEmpresa }}</td>
                <td>{{ empresa.NombreEmpresa }}</td>
                <td>{{ empresa.DireccionEmpresa }}</td>
                <td>{{ empresa.CorreoEmpresa }}</td>
                <td>{{ empresa.DescripcionEmpresa }}</td>
                <td><img src="{{ empresa.ImagenEmpresa }}" width="200px" height="100px"/></td>
                {#<td>{{ empresa.visitas }}</td>#}
                <td>
                    <a id="editar" name="editar" class="edit btn btn-warning" href="#"><i class="material-icons">create</i></a>
                    <a id="eliminar" name="eliminar" class="delete btn btn-danger" href="#"><i class="material-icons">delete_sweep</i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table> {# <a href="{{ path('empresa_new') }}">Create new</a>   #}
</div>

<!--          MODAL              -->

<div class="modal fade" id="empresamodal" name="empresamodal" tabindex="-1" role="dialog"
    aria-labelledby="empresa-modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ver/Editar</h5>
            </div>
            <div class="modal-body">
                <form id="empresa-form">
                    <br></br>
                    <div class="row">
                        <div class="col s12">
                            <input id="nombre" type="text" class="form-control" placeholder="Nombre Empresa:" >
                        </div>
                    </div>
                    <br></br>
                    <div class="row">
                        <div class="col s12">
                            <input id="direccion" type="text" class="form-control" placeholder="Direccion Empresa:">
                        </div>
                    </div>
                    <br></br>
                    <div class="row">
                        <div class="col s5">
                            <input id="telefono" type="text" class="form-control" placeholder="Telefono:">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <input id="descripcion" type="text" class="form-control" placeholder="Descripcion:">
                        </div>
                    </div>
                    <br></br>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="productos-guardar" type="submit" class="btn btn-primary"><a>Crear Nuevo Registro</a></button>
            </div>
            </form>

        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
