{% extends 'base.html.twig' %}

{% block title %}ADMIN USUARIOS{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset("css/jquery.dataTables.min.css") }}">
{% endblock %}

{% block body %}
<div class="container">
    <h1>Usuarios</h1>
    <button id="usuario-nuevo" class="btn btn-success"><i class="material-icons">add_circle_outline</i></button>
    <br></br>
    <table id="usuarios-table" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th style="width:30%">Nombre Usuario</th>
                <th style="width:30%">Correo</th>
                <th style="width:20%">Contraseña</th>
                <th style="width:20%">Domicilio</th>
                <th style="width:20%">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for usuario in content['usuario'] %}
            <tr>
                <td>{{ usuario.IdUsuario }}</td>
                <td>{{ usuario.NombreUsuario }}</td>
                <td>{{ usuario.CorreoUsuario }}</td>
                <td>{{ usuario.PasswordUsuario }}</td>
                <td>{{ usuario.DomicilioUsuario }}</td>
                <td>
                    <a id="editar" name="editar" class="edit btn btn-warning" href="#"><i class="material-icons">create</i></a>
                    <a id="eliminar" name="eliminar" id-record="{{usuario.IdUsuario}}" class="delete btn btn-danger" href="#"><i class="material-icons">delete_sweep</i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {# <a href="{{ path('empresa_new') }}">Create new</a>   #}
</div>
<!--          MODAL              -->

<div class="modal fade" id="usuariomodal" name="usuariomodal" tabindex="-1" role="dialog" aria-labelledby="usuario-modal"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ver/Editar</h5>
            </div>
            <div class="modal-body">
                <form id="usuarioform">
                        <div class="row">
                            <div class="col">
                                <input id="nombre" name="nombre" type="text" class="form-control" placeholder="Nombre Usuario:">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input id="correo" name="correo" type="email" class="form-control" placeholder="Correo Usuario:">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input id="password" name="password" type="password" class="form-control" placeholder="Contraseña:">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input id="domicilio" name="domicilio" type="text" class="form-control" placeholder="Domicilio:">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input id="rol" name="rol" type="text" class="form-control" placeholder="Rol:">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="cancelar" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" id="usuarios-guardar" class="btn btn-primary">Guardar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript"> 
        var urlInsertarUsuario = "{{path('usuario_admin_insertar')}}";
    </script>

    <script type="text/javascript"> 
        var urlEliminar = "{{path('usuario_admin_eliminar')}}";
        var Empresas = {{content['usuario']|json_encode()|raw}};
    </script>

    <script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.dataTables_.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dataTables.materialize.js') }}"></script>
    <script type="text/javascript" src="{{ asset('jsUsuarios/js/Usuarios.js') }}"></script>
{% endblock %}
