{% extends 'base.html.twig' %}

{% block title %}ADMIN USUARIOS{% endblock %}

{% block body %}
<div class="container">
    <h1>Usuarios</h1>
    <button id="usuario-nuevo" class="btn btn-success"><i class="material-icons">add_circle_outline</i></button>
    <br></br>
    <table id="usuario-table" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th style="width:30%">Nombre Usuario</th>
                <th style="width:30%">Correo</th>
                <th style="width:20%">Contraseña</th>
                <th style="width:20%">Domicilio</th>
                <th style="width:20%">Rol</th>
                <th style="width:20%">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for usuario in content['usuario'] %}
            <tr>
                <td>{{ usuario.IdUsuario }}</td>
                <td>{{ usuario.NombreUsuario }}</td>
                <td>{{ usuario.CorreoUsuario }}</td>
                <td>{{ usuario.PasswordUsuario }}</td>
                <td>{{ usuario.DomicilioUsuario }}</td>
                <td>{{ usuario.IdTipoUsuario }}</td>
                <td>
                    <a class="edit btn btn-warning" href="#"><i class="material-icons">create</i></a>
                    <a class="delete btn btn-danger" href="#"><i class="material-icons">delete_sweep</i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {# <a href="{{ path('empresa_new') }}">Create new</a>   #}
</div>
<!--          MODAL              -->

<div class="modal fade" id="usuario-modal" name="usuario-modal" tabindex="-1" role="dialog" aria-labelledby="usuario-modal"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ver/Editar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="usuario-form">
                    <div class="row">
                        <div class="col">
                            <input id="nombre" type="text" class="form-control" placeholder="Nombre Usuario:" required>
                        </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input id="correo" type="email" class="form-control" placeholder="Correo Usuario:">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input id="contraseña" type="password" class="form-control" placeholder="Contraseña:">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input id="rol" type="text" class="form-control" placeholder="Rol:">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button id="productos-guardar" type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/jquery-3.0.0.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dataTables.materialize.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.validate.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('jsUsuarios/js/Usuarios.js') }}"></script>
{% endblock %}
